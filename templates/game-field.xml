<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:script>var data = {};</fest:script>
    <fest:script>data.letters = ['А', 'Б', 'В', 'Г', 'Д', 'Е', 'Ж', 'З', 'И', 'К', 'Л', 'М', 'Н', 'О'];</fest:script>
    <fest:script>data.fields = ['left', 'right'];</fest:script>

    <table class="game-field">
        <thead>
            <tr>
                <td class="game-field__cell game-field__cell_header_none"></td>
                <fest:for from="1" to="10" index="column">
                    <td class="game-field__cell game-field__cell_header_top">
                        <fest:value>data.letters[column - 1]</fest:value>
                    </td>
                </fest:for>
            </tr>
        </thead>
        <fest:for from="1" to="10" index="row">
            <tr>
                <td class="game-field__cell game-field__cell_header_left">
                    <fest:value>row</fest:value>
                </td>
                <fest:for from="1" to="10" index="column">
                    <td class="game-field__cell">
                        <fest:attributes>
                            <fest:attribute name="data-x"><fest:value>column</fest:value></fest:attribute>
                            <fest:attribute name="data-y"><fest:value>row</fest:value></fest:attribute>
                        </fest:attributes>
                    </td>
                </fest:for>
            </tr>
        </fest:for>
    </table>
    <div class="game-field__caption">
        <h4 class="game-field__caption-field">Ваше поле</h4>
        <h5 class="game-field__caption-info">Ходите!</h5>
    </div>

</fest:template>
