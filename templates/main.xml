<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <fest:include src="scene-ship.xml" />
    <div class="wrapper wrapper_wide">
        <div class="page-main">
            <div class="page-main__logo">
                <img class="page-main__logo-img" src="/img/logo/logo.svg" />
                <div class="page-main__logo-text">
                    Морской бой
                </div>
            </div>
            <div class="page-main__menu">
                <div class="page-main__menu-el page-main__menu-el--3">
                    <a href="#game" class="page-main__menu-el-link page-main__menu-el-link_play">
                        <i class="page-main__menu-el-img page-main__menu-el-img_play"></i>
                        <span class="page-main__menu-el-text">Играть</span>
                    </a>
                </div>
                <div class="page-main__menu-el page-main__menu-el--3">
                    <a href="#scoreboard" class="page-main__menu-el-link page-main__menu-el-link_records">
                        <i class="page-main__menu-el-img page-main__menu-el-img_records"></i>
                        <span class="page-main__menu-el-text">Рекорды</span>
                    </a>
                </div>
                <div class="page-main__menu-el page-main__menu-el--3">
                    <a href="#" class="page-main__menu-el-link page-main__menu-el-link_rules">
                        <i class="page-main__menu-el-img page-main__menu-el-img_rules"></i>
                        <span class="page-main__menu-el-text">Правила</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</fest:template>
